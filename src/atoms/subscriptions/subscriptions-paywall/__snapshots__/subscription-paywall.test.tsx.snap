                    "id": "c13d6c73-72fd-4bf6-b3f0-94c4b0279af8",
                    "metadata": Object {
                      "attributes": Object {},
                      "social-share": Object {
                        "image": Object {
                          "attribution": "Jaipur Lit Fest",
                          "caption": "Ashok Desai",
                          "key": "barandbench/2020-04/a5c5ef4b-8843-4453-89bd-3953e2c7412f/ashok_desai.jpg",
