{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "allowJs": false,
    "jsx": "react",
    "outDir": "./dist",
    "removeComments": true,
    "noEmit": false,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noEmitOnError": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "typeRoots": ["./typings", "node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/atoms", "./src/molecules", "./src/templates"],
  "exclude": ["dist", "coverage", "node_modules", "**/__tests__/*", "**/*.test.tsx", "**/__fixtures__/*"]
}
