{
  "compilerOptions": {
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "strict": true,
      "alwaysStrict": true,
      "removeComments": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
  },
  "exclude": ["dist", "coverage", "node_modules", "**/__tests__/*", "**/*.test.tsx"],
  "include": ["src"]
}
